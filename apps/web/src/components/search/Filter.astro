---
import SearchGroup from "@/components/search/group/SearchGroup";
import SearchLanguage from "@/components/search/language/SearchLanguage";
import SearchStatus from "@/components/search/status/SearchStatus";
import SearchTag from "@/components/search/tag/SearchTag";
---

<div
  id="filter"
  class="h-0 overflow-hidden transition-[height] duration-150 ease-linear"
>
  <div class="flex flex-col p-2 mt-2 overflow-visible">
    <div class="flex gap-8">
      <SearchLanguage type="Original" client:only="react" />
      <SearchLanguage type="Available" client:only="react" />
      <SearchGroup group="Publishers" client:only="react" />
      <SearchGroup group="Staff" client:only="react" />
    </div>
    <div class="flex gap-8">
      <SearchTag client:only="react" />
      <SearchStatus client:only="react" />
    </div>
    <!-- TODO -->
    <span>original language, translated languages, status, release year</span>
    <span>tags, readinglist</span>
    <span>chapters, rating, # ratings, readers, reviews</span>
    <span>sort by</span>
  </div>
</div>
